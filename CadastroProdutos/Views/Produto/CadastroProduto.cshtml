@model CadastroProdutos.Models.Produto

<h2>Cadastro de Produtos</h2>

<form asp-action="CadastroProduto" method="post">
    <div>
        <label>Nome:</label>
        <input asp-for="Nome" required />
    </div>
    <div>
        <label>Descrição:</label>
        <input asp-for="Descricao" type="text" required />
    </div>
    <div>
        <label>Preço:</label>
        <input asp-for="Preco" type="text" required />
    </div>
    <div>
        <label>Quantidade:</label>
        <input asp-for="Quantidade" type="text" required />
    </div>
    <button type="submit">Cadastrar Produto</button>
</form>